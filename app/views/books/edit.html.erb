<h2>Editing Books</h2>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  <h5></h5>
  <%= f.submit 'Update Books' %>
<% end %>

