<h2>Books</h2>

<table class="book-list">

  <thead>
    <tr class="thead">
      <th class="book-data">Title</th>
      <th class="book-data">Body</th>
      <th class="book-data"></th>
    </tr>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td class="book-data"><%= book.title %></td>
  <td class="book-data"><%= book.body %></td>
  <td class="book-data"><%= link_to "Show", book_path(book.id) %></td>
  <td class="book-data"><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td class="book-data"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</tbody>

</table>


<h3>New Books</h3>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<span>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  <h5></h5>
  <%= f.submit 'Create Books' %>
<% end %>
</span>



